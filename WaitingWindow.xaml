<Window x:Class="AbakConfigurator.WaitingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AbakConfigurator"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        mc:Ignorable="d"
        Title="Конфигуратор АБАК ПЛК" Height="400" Width="400" ResizeMode="NoResize" WindowStartupLocation="CenterScreen"> 
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="200"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>
        <Image Grid.Row="1" gif:ImageBehavior.AnimatedSource="/AbakConfigurator;component/icons/loading.gif" HorizontalAlignment="Center" />
        <Label x:Name="Message" Grid.Row="2" Content="{Binding Message}" Margin="0,0,0,-19" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18"/>
    </Grid>
</Window>
