<!-- Окно добавления подгруппы с пользовательскими параметрами -->
<Window x:Class="AbakConfigurator.AddSubGroupWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="{DynamicResource l_addSubgroupWindowCaption}" Width="287"
    ResizeMode="NoResize" WindowStartupLocation="CenterOwner" ShowInTaskbar="False" Height="118">
    
    <Grid Margin="0,0,0,0">
        <StackPanel>
            <Label Content="{DynamicResource l_subgroupNameLabel}" VerticalAlignment="Bottom"/>
            <TextBox x:Name="SubGroupNameBox"/>
            <WrapPanel HorizontalAlignment="Right" Margin="0,0,0,0">
                <Button Content="OK" IsDefault="True" Click="OKButtonClick_Handler" />
                <Button Content="{DynamicResource l_cancel}" IsCancel="True"/>
            </WrapPanel>
        </StackPanel>
    </Grid>
</Window>
