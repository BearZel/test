<Window x:Class="AbakConfigurator.WaitingForUpdateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AbakConfigurator"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        mc:Ignorable="d"
        Closing="ClosingOff"
        WindowStartupLocation="CenterOwner"
        Height="500" Width="400" WindowStyle ="SingleBorderWindow" SizeToContent="Height" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="200"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>
        <Image Grid.Row="1" gif:ImageBehavior.AnimatedSource="/AbakConfigurator;component/icons/loading.gif" HorizontalAlignment="Center" />
        <Label Grid.Row="2" Content="Идёт подготовка модулей к обновлению" Margin="0,0,0,-19" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18"/>

    </Grid>
</Window>
