<Window x:Class="AbakConfigurator.DownloadZipLog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AbakConfigurator"
        mc:Ignorable="d"
        Title="{DynamicResource l_preparationLog}" Height="350" Width="600">

    <Grid Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">

    <Grid.RowDefinitions>
        <RowDefinition />
        <RowDefinition />
    </Grid.RowDefinitions>
    <Label x:Name="operationNameLab" Content="{Binding CurrentOperation}" Grid.Row="0" Margin="5" HorizontalAlignment="Center" />
    <Label x:Name="progressLab" Content="{Binding ProgressString}" Grid.Row="1" Margin="5" HorizontalAlignment="Center" />
</Grid>
</Window>
